<div class="static panel panel-default">
<%if current_user.try(:admin?)%>
<%= render 'pages/backdoorheader' %>
<br/>
<h4> Admin Users</h4>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Login Count</th>
		</tr>
	<tbody>
		<% @users = User.all %>
		<% @users.each do |user| %>
		<%if user.admin%>
		  <tr><td><%= user.name %></td>
		  <td><%= user.email %></td>
		  <td><%= user.sign_in_count %></td></tr>
			<% end %>
			<% end %>
	</tbody>
</table>
<br/>
<h4> All Users</h4>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Login Count</th>
		</tr>
	<tbody>
		<% @users = User.all %>
		<% @users.each do |user| %>
		<%if user.admin%>
		<%else%>
		  <tr><td><%= user.name %></td>
		  <td><%= user.email %></td>
		  <td><%= user.sign_in_count %></td></tr>
			<% end %>
			<% end %>
	</tbody>
</table>
<br/>


<%else%>

<p>This isn't the page you were looking for... </p><%= link_to 'Click Here To Return to Homepage', root_path %>

<%end%>
</div>
