<div class="static panel panel-default">
<%if current_user.try(:admin?)%>
<%= render 'pages/backdoorheader' %>
<h1>All comments</h1>

<table class="table table-striped">
  <thead>
    <tr>
    <th>Place Number</th>
    <th>Commentor Name</th>
    <th>Comment Body</th>
    <th>Admin Options</th>
</thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.place_id %></td>
        <td><%= comment.user_name %></td>

        <td><%= comment.body %></td>
        <td><%= link_to 'Show', comment %>
            <%= link_to 'Edit', edit_comment_path(comment) %>
            <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%else%>

<p>This isn't the page you were looking for... </p><%= link_to 'Click Here To Return to Homepage', root_path %>

<%end%>
</div>