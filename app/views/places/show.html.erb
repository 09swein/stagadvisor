
<%= link_to places_path do %>
<span class = "glyphicon glyphicon-chevron-left"></span>
Back
<%end%>
<div class="row">
	<div class="col-md-offset2 col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading center">
				<h2><%= @place.title %></h2>
				
				<p><%= image_tag @place.image.url(:medium) %></p>
					<div class="panel-body">
						<p><%= show_stars @place%></p>
					<p><strong>Description:</strong><%= @place.description %></p>
					<p><strong>Attractions:</strong><%= @place.attractions %></p>
					<p><strong>Restaurants:</strong><%= @place.restaurants %></p>
					<p><strong>Ladies:</strong><%= @place.ladies %></p>
					<div class = "actions">
						<%= link_to edit_place_path(@place) do %> 
							 <span class="glyphicon glyphicon-edit"></span> Edit
      			<% end %>
					</div>
				
				</div>

			</div>
			<% if user_signed_in? %>
				<%= form_for [@place, Comment.new] do |f| %>
					<p>
						<%= f.text_field :body, class:"form-control"  %>
					</p>
					<p><%=f.submit "Add Comment", class: "btn btn-primary" %></p>
				<%end%>
			<%else%>
				<%= link_to "Quick Sign Up to Comment", new_user_registration_path, class: "btn btn-primary"%>
			<%end%>
			<h6> All Comments </h6>
			<%= render :partial => @place.comments %>
		</div>
	</div>
</div>

